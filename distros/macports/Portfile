                    sha1    882468c203a006cd9038fa0d7d63a7ee6fe284cc \
                    rmd160  e6f9a034eec1441a28b592449a449c59fcb96623

worksrcdir			${name}
use_configure		no

build {}

destroot {
	xinstall -m 755 ${worksrcpath}/dcl.pl ${destroot}${prefix}/bin/dcl
}


